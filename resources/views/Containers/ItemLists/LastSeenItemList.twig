{{ component( "Ceres::ItemList.Components.CategoryImageCarousel") }}
{{ component( "Ceres::ItemList.Components.ItemLazyImg" ) }}

{% set itemList = services.itemLoader.loadForTemplate('CeresElectronic::Containers.ItemLists.LastSeenItemList', itemLoaderPresets.lastSeenItemsList, {'items':itemsPerPage}).documents %}
{% if itemList %}
    <div class="m-b-1 clearfix">

        <div class="section-header m-b-1">
            <h4>{{ trans("Ceres::Template.itemListLastSeen") }}</h4>
        </div>

        <div class="m-b-1 clearfix">

            <ul id="twig-rendered-item-list" class="product-list row grid">
                {% for key, item in itemList if (key < 4) %}
                    <li class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                        {% include "Ceres::Category.Item.Partials.CategoryListItem" with { 'item': item } %}
                    </li>
                {% endfor %}
            </ul>

        </div>
    </div>

{% endif %}