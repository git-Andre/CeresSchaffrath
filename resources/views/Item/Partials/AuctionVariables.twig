
{% if( auction[0] ) %}


<h1>Auktion:</h1>

<dl class="itemDefList">
    <dt>Id:</dt>
    <dd>{{ auction[0].id }} </dd>

    <dt>itemId:</dt>
    <dd>{{ auction[0].itemId }} </dd>

    <dt>Start Datum:</dt>
    <dd>{{ auction[0].startDate | date('d.M.Y H:i \\U\\h\\r') }}</dd>
    <dt>End Datum:</dt>
    <dd>{{ endDate }}</dd>

    <dt>Laufzeit:</dt>
    <dd>{{ auction[0].auctionDuration }} Tage</dd>

    <dt>Start Preis:</dt>
    <dd>{{ auction[0].startPrice  | formatMonetary('EUR') }}</dd>
    <dt>Sofort Kaufen:</dt>
    <dd>{{ auction[0].buyNowPrice | formatMonetary('EUR') }}</dd>
</dl>
{% endif %}

{% if liveAuction[0] %}
<h1>Live Auktion Input:</h1>

<dl class="itemDefList">
    <dt>ID:</dt>
    <dd>{{ liveAuction[0].id }}</dd>

    <dt>itemId:</dt>
    <dd>{{ liveAuction[0].itemId }}</dd>

    <dt>auctionId:</dt>
    <dd>{{ liveAuction[0].auctionId }}</dd>

    <dt>isEnded:</dt>
    <dd>{{ liveAuction[0].isEnded }}</dd>

    <dt>isLive:</dt>
    <dd>{{ liveAuction[0].isLive }}</dd>

    <dt>isEnded...BuyNow:</dt>
    <dd>{{ liveAuction[0].isEndedWithBuyNow }}</dd>

    <dt>bidderList:</dt>
    <dd>{{ liveAuction[0].bidderList | json_encode }}</dd>

    <dt>customerEmail:</dt>
    <dd>{{ liveAuction[0].bidderList[0].customerEmail }}</dd>

    <dt>bidPrice Bsp.:</dt>
    <dd>{{ liveAuction[0].bidderList[0].bidPrice  | formatMonetary('EUR') }}</dd>

    <dt>bidTimeStamp Bsp.:</dt>
    <dd>{{ liveAuction[0].bidderList[0].bidTimeStamp | date('d.m.Y H:i:s') }}</dd>

    <dt>createdAt:</dt>
    <dd>{{ liveAuction[0].createdAt | date('d.M.Y H:i:s \\U\\h\\r') }}</dd>

</dl>
{% else %}

    <h1>StageModus...</h1>


{% endif %}